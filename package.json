{
  "name": "favc",
  "version": "1.0.0",
  "description": "Frame-Accurate Video Clipper",
  "main": "dist/index.js",
  "bin": {
    "favc": "./dist/cli.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "test": "jest",
    "check": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "ora": "^5.4.1",
    "zod": "^4.1.12"
  },
  "keywords": [
    "frame",
    "accurate",
    "video",
    "clipper",
    "ffmpeg",
    "video-clipper",
    "frame-accurate"
  ],
  "author": "Mauricio Vargas Escobar",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0"
  }
}
